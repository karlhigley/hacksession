!!!
%html
  %head
    %title Hack Session
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = favicon_link_tag
    = csrf_meta_tags

  %body
    #content
      #account_links{:style => 'float: right;'}
        = render :partial => 'shared/account_links'
      .header
        %h1 Hack Session
        %hr
        - if notice
          .notice.alert.alert-info= notice
        - if alert
          .alert= alert

      = yield